@using System.Collections;
@model IEnumerable<Bootcamp.MVC.NET.Models.Entities.User> 
@{
  ViewData["Title"] = "Data User";
}

<table class="table" >

  <tr>
    <th>
      @Html.DisplayNameFor(user => user.Username)
    </th>
    <th>
      @Html.DisplayNameFor(user => user.Tipe)
    </th>
    <th></th>
  </tr>

  @foreach (var item in Model) {
  <tr>
    <td>
      @Html.DisplayFor(userItem => item.Username)
    </td>
    <td>
      @Html.DisplayFor(userItem => item.Tipe)
    </td>
    <td>
      <a type="edit" class="btn btn-primary" asp-route-id="@item.Id" asp-controller="User" asp-action="EditData">Edit</a>
    </td>
    <td> 
      <a type="delete" class="btn btn-danger" asp-route-id="@item.Id" asp-controller="User" asp-action="DeleteData">Delete</a>
    </td>
  </tr>
  }
  <th>
    <a class="btn btn-primary" asp-area="" asp-controller="User" asp-action="InputData">Input Data User</a>
  </th>
</table>
